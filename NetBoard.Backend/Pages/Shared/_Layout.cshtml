@{
	var isAdmin = Context.User.IsInRole("admin");
	var isModerator = Context.User.IsInRole("moderator");
	var isJanitor = Context.User.IsInRole("janitor");
	var role = "";
	if (isAdmin) role = "administrator";
	if (isModerator) role = "moderator";
	if (isJanitor) role = "janitor";

}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<meta name="description" content="" />
	<meta name="author" content="" />
	<title>@ViewBag.Title</title>
	<link href="~/css/dashboard.css" rel="stylesheet" />
	<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">
	<nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
		<a class="navbar-brand" asp-controller="Admin" asp-action="Reports">BlankChan Admin</a>
		<button class="btn btn-link btn-sm order-1" id="sidebarToggle" href="#"><i class="fas fa-bars"></i></button>
		<!-- Navbar-->
		<ul class="navbar-nav ml-auto d-inline-block form-inline mr-0 mr-md-3 my-2 my-md-0 order-9">
			<li class="nav-item">
				<a class="nav-link" asp-controller="Admin" asp-action="Logout">Logout</a>
			</li>
		</ul>
	</nav>
	<div id="layoutSidenav">
		<div id="layoutSidenav_nav">
			<nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
				<div class="sb-sidenav-menu">
					<div class="nav">
						<div class="sb-sidenav-menu-heading">User content</div>
						<a class="nav-link" asp-controller="Admin" asp-action="Reports">
							<div class="sb-nav-link-icon"><i class="fa fa-flag"></i></div>
							Reports
						</a>
						<a class="nav-link" asp-controller="Admin" asp-action="Sages">
							<div class="sb-nav-link-icon"><i class="fa fa-arrow-down"></i></div>
							Sages
						</a>

						<div class="sb-sidenav-menu-heading">Posts</div>
						<a class="nav-link" asp-controller="Admin" asp-action="Post">
							<div class="sb-nav-link-icon"><i class="fa fa-file-image"></i></div>
							Manage a post
						</a>
						<a class="nav-link" asp-controller="Admin" asp-action="PostCreate">
							<div class="sb-nav-link-icon"><i class="fa fa-plus"></i></div>
							Create a new post
						</a>

						<div class="sb-sidenav-menu-heading">Accounts</div>
						<a class="nav-link" href="#">
							<div class="sb-nav-link-icon"><i class="fas fa-file"></i></div>
							List
						</a>
						<a class="nav-link" href="#">
							<div class="sb-nav-link-icon"><i class="fas fa-plus"></i></div>
							Create new
						</a>

						<div class="sb-sidenav-menu-heading">Bans</div>
						<a class="nav-link" href="#">
							<div class="sb-nav-link-icon"><i class="fas fa-file"></i></div>
							Ban list
						</a>
						<a class="nav-link" href="#">
							<div class="sb-nav-link-icon"><i class="fas fa-gavel"></i></div>
							Issue ban
						</a>
					</div>
				</div>
				<div class="sb-sidenav-footer">
					<div class="small">Logged in as:</div>
					@Context.User.Identity.Name [@role]
				</div>
			</nav>
		</div>
		<div id="layoutSidenav_content">
			<main>
				<div class="container-fluid">
					<div class="row p-5">
						@RenderBody()
					</div>
				</div>
			</main>
		</div>
	</div>
	<script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
	<script src="~/js/scripts.js"></script>
</body>
</html>
