@inject NavigationManager NavigationManager

@if (Boards is not null) {
	<MudText Typo="Typo.caption" Class="@(Bottom ? "board-list board-list-bottom" : "board-list board-list-top")">
		<b>[</b>
		@foreach (var board in Boards) {
			if (board == CurrentBoard) {
				<MudText Typo="Typo.caption"><b>@board</b></MudText>
			} else {
				<MudLink Typo="Typo.caption" Href="@board" Class="board-list-link">@board</MudLink>
			}
			if (board != Boards.Last()) {
				<MudText Typo="Typo.caption" Inline="true">&nbsp;/&nbsp;</MudText>
			}
		}
		<b>]</b>
	</MudText>
}

@code {
	[Parameter]
	public string[] Boards { get; set; }
	public string CurrentBoard { get; set; }
	[Parameter]
	public bool Bottom { get; set; }

	protected override void OnParametersSet() {
		CurrentBoard = NavigationManager.ToBaseRelativePath(NavigationManager.Uri).ToLower();
	}
}