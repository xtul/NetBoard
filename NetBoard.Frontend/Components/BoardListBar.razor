@inject NavigationManager NavigationManager

@if (Boards is not null) {
	<MudText Typo="Typo.caption">
		<b>[</b>
		@for (int i = 0; i < Boards.Length; i++) {
			if (Boards[i].Equals(CurrentBoard)) {
				<span><b>@Boards[i]</b></span>
			} else {
				<span>@Boards[i]</span>
			}
			if (i != Boards.Length - 1) {
				<span>&nbsp;/&nbsp;</span>
			}
		}
		<b>]</b>
	</MudText>
}

@code {
	[Parameter]
	public string[] Boards { get; set; }
	public string CurrentBoard { get; set; }

	protected override void OnInitialized() {
		CurrentBoard = NavigationManager.ToBaseRelativePath(NavigationManager.BaseUri);
	}
}